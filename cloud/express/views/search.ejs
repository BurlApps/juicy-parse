<!DOCTYPE html>
<html>
    <head>
        <title>Search Confessions</title>
        <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
        <link href='//fonts.googleapis.com/css?family=Signika:400,700,600,300' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="/css/search.css">
        <link rel="stylesheet" href="/css/schools.css">

        <% if(gaTracking) { %>
          <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', '<%= gaTracking %>', 'auto');
            ga('require', 'displayfeatures');
            ga('send', 'pageview');
          </script>
        <% } %>

        <script type="text/javascript" src="//code.jquery.com/jquery-1.8.0.min.js"></script>
        <script type="text/javascript" src="/javascript/particles.js"></script>
        <script type="text/javascript" src="/javascript/search.js"></script>
        <script type="text/javascript" src="/javascript/schools.js"></script>
    </head>
    <body>
        <div class="container">
          <div class="information">
            <div class="header">Confessions Search</div>
            <form class="form" action="/search">
              <input name="_csrf" type="hidden" value="<%= csrf %>"/>
              <input name="search" type="text" class="input" placeholder="Search for your confessions...." autofocus/>
            </form>
            <div class="results"></div>
          </div>
        </div>
        <canvas id="canvas"></canvas>
        <% if(admin) { %>
          <div class="corner-links">
            <div class="link school-button">
              <strong>All Schools</strong>
            </div>
						<a class="link" href="/moderator>">Confessions</a>
						<a class="link" href="/moderator/spam">Spam</a>
          </div>
          <div class="school-popup">
            <div class="popup-darkener"></div>
            <div class="popup-container">
              <div class="popup-header">
                <div class="popup-title">Choose College</div>
                <div class="popup-close">Cancel</div>
              </div>
              <div class="popup-schools">
                <% schools.forEach(function(school) { %>
                  <a class="popup-school" href="/moderator/<%= school.slug %>"><%= school.name %></a>
                <% }) %>
              </div>
            </div>
          </div>
        <% } %>
    </body>
</html>
