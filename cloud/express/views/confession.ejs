<!DOCTYPE html>
<html>
    <head>
        <title><%= school.name %> - Post to Confessions</title>
        <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
        <link href='//fonts.googleapis.com/css?family=Signika:400,700,600,300' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="/css/index.css">
        <link rel="stylesheet" href="/css/confession.css">
        <link rel="stylesheet" href="/css/schools.css">

        <% if(gaTracking) { %>
          <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', '<%= gaTracking %>', 'auto');
            ga('require', 'displayfeatures');
            ga('send', 'pageview');
          </script>
        <% } %>

        <script type="text/javascript" src="//code.jquery.com/jquery-1.8.0.min.js"></script>
        <script type="text/javascript" src="/javascript/particles.js"></script>
        <script type="text/javascript" src="/javascript/index.js"></script>
        <script type="text/javascript" src="/javascript/schools.js"></script>
    </head>
    <body>
        <div class="container">
          <div class="information">
            <div class="header">Confession</div>
            <div class="subheader">Confess without worries!</div>
            <form class="form" action="/confession">
              <input name="_csrf" type="hidden" value="<%= csrf %>"/>
              <input name="school" type="hidden" value="<%= school.id %>"/>
              <textarea name="message" class="input textarea" placeholder="Your <%= school.name %> confession" autofocus required></textarea>
              <input class="submit" type="submit" value="Post Your Confession" />
              <div class="contact">We will always keep your identity a secret.</div>
            </form>
          </div>
          <img class="image" src="/images/confessions/<%= school.slug %>.png"/>
        </div>
        <canvas id="canvas"></canvas>
        <% if(admin) { %>
          <div class="corner-links">
            <div class="link school-button">
              <strong><%= school.name %></strong>
            </div>
            <a class="link" href="/moderator/<%= school.slug %>">Confessions</a>
            <a class="link" href="/moderator/<%= school.slug %>/spam">Spam</a>
            <a class="link" href="/search">Search</a>
          </div>

          <div class="school-popup">
            <div class="popup-darkener"></div>
            <div class="popup-container">
              <div class="popup-header">
                <div class="popup-title">Choose College</div>
                <div class="popup-close">Cancel</div>
              </div>
              <div class="popup-schools">
                <% schools.forEach(function(school) { %>
                  <a class="popup-school" href="/moderator/<%= school.slug %>/writer"><%= school.name %></a>
                <% }) %>
              </div>
            </div>
          </div>
        <% } %>
    </body>
</html>
